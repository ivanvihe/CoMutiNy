{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CoMutiNy Map Definition",
  "type": "object",
  "required": [
    "id",
    "name",
    "size",
    "spawn"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "name": { "type": "string", "minLength": 1 },
    "biome": { "type": "string" },
    "description": { "type": "string" },
    "size": {
      "type": "object",
      "required": ["width", "height"],
      "properties": {
        "width": { "type": "integer", "minimum": 0 },
        "height": { "type": "integer", "minimum": 0 }
      }
    },
    "spawn": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": { "type": "integer" },
        "y": { "type": "integer" }
      }
    },
    "blockedAreas": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["x", "y", "width", "height"],
        "properties": {
          "x": { "type": "integer" },
          "y": { "type": "integer" },
          "width": { "type": "integer", "minimum": 0 },
          "height": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "position", "size"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "solid": { "type": "boolean" },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" }
            }
          },
          "size": {
            "type": "object",
            "required": ["width", "height"],
            "properties": {
              "width": { "type": "integer", "minimum": 0 },
              "height": { "type": "integer", "minimum": 0 }
            }
          },
          "metadata": { "type": "object" }
        }
      }
    },
    "doors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "kind", "position"],
        "properties": {
          "id": { "type": "string" },
          "kind": { "type": "string", "enum": ["in", "out"] },
          "position": {
            "type": "object",
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" }
            }
          },
          "targetMap": { "type": ["string", "null"] },
          "targetPosition": {
            "type": ["object", "null"],
            "properties": {
              "x": { "type": "integer" },
              "y": { "type": "integer" }
            }
          }
        }
      }
    },
    "tileTypes": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["id", "symbol", "name"],
        "properties": {
          "id": { "type": "string" },
          "symbol": { "type": "string", "minLength": 1 },
          "name": { "type": "string" },
          "collides": { "type": "boolean" },
          "transparent": { "type": "boolean" },
          "color": { "type": "string" },
          "metadata": { "type": "object" }
        }
      }
    },
    "layers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "tiles"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "order": { "type": "integer" },
          "visible": { "type": "boolean" },
          "tiles": {
            "type": "array",
            "items": {
              "type": "array",
              "items": { "type": ["string", "null"] }
            }
          }
        }
      }
    },
    "collidableTiles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["x", "y"],
        "properties": {
          "x": { "type": "integer" },
          "y": { "type": "integer" }
        }
      }
    }
  },
  "additionalProperties": true
}
