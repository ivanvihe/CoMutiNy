export default {
  id: 'table_collaborative_island',
  name: 'Mesa colaborativa isla',
  description: 'Superficie amplia con contraste de madera y metal para reuniones r√°pidas.',
  appearance: {
    width: 2,
    height: 1,
    tileSize: 32,
    anchor: { x: 0.5, y: 0.75 },
    generator: function drawCollaborativeTable(ctx, { tileSize, pixelWidth, pixelHeight }) {
      ctx.save();
      ctx.fillStyle = '#4E342E';
      ctx.fillRect(pixelWidth * 0.15, pixelHeight * 0.75, pixelWidth * 0.12, pixelHeight * 0.25);
      ctx.fillRect(pixelWidth * 0.73, pixelHeight * 0.75, pixelWidth * 0.12, pixelHeight * 0.25);

      const legWidth = tileSize * 0.35;
      const legHeight = pixelHeight * 0.3;
      const legGradient = ctx.createLinearGradient(0, pixelHeight * 0.65, 0, pixelHeight);
      legGradient.addColorStop(0, '#B0BEC5');
      legGradient.addColorStop(1, '#78909C');
      ctx.fillStyle = legGradient;
      ctx.fillRect(pixelWidth * 0.1, pixelHeight * 0.65, legWidth, legHeight);
      ctx.fillRect(pixelWidth - legWidth - pixelWidth * 0.1, pixelHeight * 0.65, legWidth, legHeight);

      const topGradient = ctx.createLinearGradient(0, 0, pixelWidth, pixelHeight * 0.4);
      topGradient.addColorStop(0, '#FFE0B2');
      topGradient.addColorStop(0.5, '#FFCC80');
      topGradient.addColorStop(1, '#FFB74D');
      ctx.fillStyle = topGradient;
      ctx.beginPath();
      const radius = tileSize * 0.4;
      ctx.moveTo(radius, pixelHeight * 0.2);
      ctx.lineTo(pixelWidth - radius, pixelHeight * 0.2);
      ctx.quadraticCurveTo(pixelWidth, pixelHeight * 0.2, pixelWidth, pixelHeight * 0.35);
      ctx.lineTo(pixelWidth, pixelHeight * 0.6);
      ctx.quadraticCurveTo(pixelWidth, pixelHeight * 0.75, pixelWidth - radius, pixelHeight * 0.75);
      ctx.lineTo(radius, pixelHeight * 0.75);
      ctx.quadraticCurveTo(0, pixelHeight * 0.75, 0, pixelHeight * 0.6);
      ctx.lineTo(0, pixelHeight * 0.35);
      ctx.quadraticCurveTo(0, pixelHeight * 0.2, radius, pixelHeight * 0.2);
      ctx.closePath();
      ctx.fill();

      ctx.strokeStyle = 'rgba(62, 39, 35, 0.45)';
      ctx.lineWidth = 2;
      ctx.stroke();

      ctx.fillStyle = 'rgba(255, 255, 255, 0.3)';
      ctx.fillRect(pixelWidth * 0.2, pixelHeight * 0.3, pixelWidth * 0.6, pixelHeight * 0.12);
      ctx.restore();
    }
  },
  metadata: {
    tags: ['decorative', 'furniture', 'table']
  }
};
