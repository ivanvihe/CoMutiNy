{
  "name": "comutiny-frontend",
  "private": true,
  "version": "0.1.0",
  "description": "Frontend del proyecto CoMutiNy construido con Vite, React y TypeScript.",
  "type": "module",
  "scripts": {
    "assets:check": "bash ../infrastructure/scripts/check-assets.sh",
    "build": "tsc -b && vite build",
    "dev": "vite",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "npm run assets:check",
    "predev": "npm run assets:check",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@colyseus/client": "npm:colyseus.js@^0.16.21",
    "easystarjs": "^0.4.4",
    "phaser": "^3.90.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.9"
  }
}
